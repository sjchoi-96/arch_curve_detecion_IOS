{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/*"]
    },
    "types": ["vite/client"],
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist-electron/renderer"
  },
  "include": ["src/renderer/**/*", "src/renderer/stores"]
}

